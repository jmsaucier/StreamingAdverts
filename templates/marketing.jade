extends marketing_layout

block content
    .row
        .col-lg-12
            h1
                i.fa.fa-fw.fa-dashboard
                |  Dashboard
            hr
    #information-row.row
    
    .row
        .btn.btn-success
            | Create Campaign
        
    script.
        $(document).ready(function(){
            var info = $('#information-row');
            $.getJSON('/marketing_campaigns', function(data){
                if(data.length > 0)
                {
                    var content = '<table class="table table-striped">';
                    content += '<tr><th>Name</th><th>Name</th></tr>';
                    for(i=0;i<data.length;i++){
                        content += '<tr>';
                        content += '<td>' + data[i].name + '</td>';
                        content += '<td>' + data[i].name + '</td>';
                        content += '</tr>';
                    }

                    content += '</table>';
                    info.append(content);
                }
                else
                {
                    var AlertContent = '<div class="alert alert-warning"><i class="fa fa-exclamation-triangle"></i> You have not created any advertising campaigns. Please click below to start your first one!</div>';
                    info.append(AlertContent);
                }
            });
        });
